<div class="container">
  <div class="jumbotron">
    <h1>WELCOME TO GOOD BURGER!</h1>
<br>
    <h2>Can I take your order?</h2>

    <form class="create-form">
      <div class="form-group">
        <input type="text" id="freshBurger" name="name">
      </div>

      <button type="submit" class="btn-warning">Place Order</button>
    </form>

  </div>
<br> <br>
  <div class="row">
    <div class=col-sm-6>
      <h3>Order up</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          <span>{{this.burger_name}}</span>
          <button type="button" class="nomnom btn btn-warning" id="nomnom" data-id="{{this.id}}"
            data-newDevoured="{{devoured}}"><span>NOM!</span></button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

<div class="col-sm-6">
    <h3>PAST ORDERS</h3>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        <span>{{this.burger_name}}</span>
      </li>
      {{/if}}
      {{/each}}
    </ul>
    </div>
  </div>

</div>